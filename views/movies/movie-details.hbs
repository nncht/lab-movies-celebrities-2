<h2>{{details.title}}</h2>
<ul>
  <li>Genre: {{details.genre}}</li>
  <li>Plot: {{details.plot}}</li>
</ul>

{{#each details.cast}}
  <h4>{{this.name}}</h4>
  <ul>
    <li>Occupation: {{this.occupation}}</li>
    <li>Catchphrase: "{{this.catchPhrase}}"</li>
  </ul>
{{/each}}

<form action="/movies/{{details._id}}/delete" method="POST">
  <button type="submit">Delete</button>
</form>

<a href="/movies/{{details._id}}/edit">Edit Movie</a>
<a href="/movies">All movies</a>