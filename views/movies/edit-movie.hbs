<h2>Edit movie</h2>

<form action="/movies/{{movieToEdit._id}}" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="{{movieToEdit.title}}" />

  <label for="genre">Genre:</label>
  <input type="text" id="genre" name="title" value="{{movieToEdit.genre}}" />

  <label for="plot">Plot:</label>
  <input type="text" id="plot" name="title" value="{{movieToEdit.plot}}" />

  <label for="cast">Cast:</label>

  <select id="cast" name="cast" multiple>
    {{#each castToEdit}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <button type="submit">Done</button>
</form>

<a href="/movies">View all movies</a>
